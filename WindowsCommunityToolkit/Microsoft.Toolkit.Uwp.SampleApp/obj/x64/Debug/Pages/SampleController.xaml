<Page x:ConnectionId='1'
    x:Class="Microsoft.Toolkit.Uwp.SampleApp.SampleController"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:controlsLocal="using:Microsoft.Toolkit.Uwp.SampleApp.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:common="using:Microsoft.Toolkit.Uwp.SampleApp.Common"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:models="using:Microsoft.Toolkit.Uwp.SampleApp.Models"
    mc:Ignorable="d">

    <Grid>

        <Grid x:ConnectionId='2' x:Name="RootGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition x:ConnectionId='3' x:Name="SideColumn" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="50" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid x:ConnectionId='4' x:Name="SampleTitleBar"
                  Grid.Row="1"
                  Canvas.ZIndex="999"
                  Background="{ThemeResource Brush-Sample-HeaderBacking}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            Padding="10,0">
                    <TextBlock x:ConnectionId='31'                                                         
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       TextLineBounds="Tight" />

                    <AppBarButton x:ConnectionId='32' x:Name="GithubButton"
                                              
                        ToolTipService.ToolTip="View in GitHub"
                        Margin="5,0,0,0"
                        Width="50">
                        <AppBarButton.Icon>
                            <PathIcon Margin="-3" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Data="{StaticResource GithubIcon}">
                                <PathIcon.RenderTransform>
                                    <CompositeTransform TranslateY="5" TranslateX="-5" />
                                </PathIcon.RenderTransform>
                            </PathIcon>
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarSeparator x:ConnectionId='33' Margin="-10, 3, -10, 0"
                                                                              />

                    <!-- Sample Display properties -->
                    <StackPanel x:ConnectionId='34' Margin="10,0,0,0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                                                        >
                        <!-- Disabled for Possible Future PR -->
                        <ToggleSwitch x:ConnectionId='35' x:Name="BGSwitch"
                                      Visibility="Collapsed"
                                      OffContent="BG Image"
                                      OnContent="BG Image"
                                                                                 />

                        <TextBlock Text="Theme" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <ComboBox x:ConnectionId='36' x:Name="ThemePicker">
                            <ComboBoxItem Content="System" />
                            <ComboBoxItem Content="Light" />
                            <ComboBoxItem Content="Dark" />
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <AppBarButton x:ConnectionId='30' x:Name="NarrowInfoButton"
                              Grid.Column="1"
                              Width="50"
                              Visibility="Collapsed"
                                                            >
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE946;" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </Grid>

            <Grid x:ConnectionId='5' x:Name="DemoAreaGrid"
                  Grid.Row="2"
                  Background="{ThemeResource Brush-Sample-Background}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border x:ConnectionId='23' x:Name="PlainBackground"
                                                                              />

                <ContentPresenter x:ConnectionId='24' x:Name="SampleContent" />

                <controls:DropShadowPanel x:ConnectionId='25' Grid.Row="1"
                                          Color="Black"
                                          ShadowOpacity="0.2"
                                          BlurRadius="40"
                                          HorizontalContentAlignment="Stretch"
                                          Margin="8,0,8,8"
                                                                                                            >

                    <Border Background="{ThemeResource Commands-Background}"
                            CornerRadius="6">
                        <ItemsControl x:ConnectionId='26'                                
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Stretch"
                                      Margin="10,10,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <controls:WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate                                  >
                                    <Button x:ConnectionId='28'                         
                                            Margin="0, 0, 10, 10"
                                            MinWidth="150"
                                            FontSize="12"
                                            Foreground="{ThemeResource Brush-Grey-01}">
                                        <interactivity:Interaction.Behaviors>
                                            <core:EventTriggerBehavior EventName="Click">
                                                <core:InvokeCommandAction x:ConnectionId='29'                    />
                                            </core:EventTriggerBehavior>
                                        </interactivity:Interaction.Behaviors>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </controls:DropShadowPanel>
            </Grid>

            <Grid x:ConnectionId='6' x:Name="InfoAreaGrid"
                  Background="{ThemeResource Brush-SampleInfo-Background}"
                  Grid.Column="1"
                  Grid.Row="1"
                  Grid.RowSpan="3"
                  Canvas.ZIndex="99">

                <Pivot x:ConnectionId='9' Style="{StaticResource PivotUnderlineStyle}" x:Name="InfoAreaPivot"
                       Grid.Row="1"
                       Padding="5,0"
                       HeaderTemplate="{StaticResource PivotHeaderTemplate}"
                                                                          >
                    <Pivot.LeftHeader>
                        <AppBarButton x:ConnectionId='11' x:Name="ExpandPane"
                                                                              
                                      Icon="ClosePane"
                                      Width="50"
                                                                          />
                    </Pivot.LeftHeader>

                    <PivotItem x:ConnectionId='12' x:Name="PropertiesPivotItem"
                                Padding="0, 10,0,0"
                                Header="Properties">
                        <ScrollViewer>
                            <controlsLocal:PropertyControl x:ConnectionId='22' x:Name="Properties" />
                        </ScrollViewer>
                    </PivotItem>

                    <PivotItem x:ConnectionId='13' x:Name="XamlPivotItem"
                               Header="XAML">
                        <controlsLocal:XamlCodeEditor x:ConnectionId='21' x:Name="XamlCodeEditor" />
                    </PivotItem>

                    <PivotItem x:ConnectionId='14' x:Name="XamlReadOnlyPivotItem"
                               Padding="0, 10,0,0"
                               Header="XAML">
                        <controlsLocal:CodeRenderer x:ConnectionId='20' x:Name="XamlReadOnlyCodeRenderer" />
                    </PivotItem>

                    <PivotItem x:ConnectionId='15' x:Name="CSharpPivotItem"
                               Padding="0, 10,0,0"
                               Header="Code">
                        <controlsLocal:CodeRenderer x:ConnectionId='19' x:Name="CSharpCodeRenderer"
                                                    IsFocusEngagementEnabled="False" />
                    </PivotItem>

                    <PivotItem x:ConnectionId='16' x:Name="DocumentationPivotItem"
                            Padding="0, 10,0,0"
                            Header="Documentation">
                        <ScrollViewer x:ConnectionId='17' x:Name="DocumentationScrollViewer">
                            <controls:MarkdownTextBlock x:ConnectionId='18' x:Name="DocumentationTextBlock"
                                                        Foreground="{ThemeResource DocumentationForeground}"
                                                        Background="Transparent"
                                                        CodeBackground="{ThemeResource SampleMarkdownBackgroundBrush}"
                                                        QuoteBackground="{ThemeResource SampleMarkdownBackgroundBrush}"
                                                        InlineCodeBackground="{ThemeResource SampleMarkdownInlineCodeBackgroundBrush}"
                                                        LinkForeground="{ThemeResource Brush-Link-Normal}"
                                                                                                              
                                                                                                          
                                                        SchemeList="uwpct"
                                                        IsFocusEngagementEnabled="False"
                                                        ImageMaxWidth="500"
                                                        ImageMaxHeight="500" />
                        </ScrollViewer>
                    </PivotItem>
                </Pivot>

                <controls:GridSplitter x:ConnectionId='10' x:Name="Splitter"
                                       Grid.Row="1"
                                       Width="11"
                                       Background="Transparent"
                                       HorizontalAlignment="Left"
                                       GripperForeground="{ThemeResource Brush-Alt}"
                                       ParentLevel="1" />
            </Grid>

            <Border HorizontalAlignment="Stretch"
                    Grid.ColumnSpan="2"
                    Visibility="{Binding DeprecatedWarning, Converter={StaticResource EmptyStringToObject}, FallbackValue=Collapsed}"
                    Background="{StaticResource SystemControlHighlightAccentBrush}"
                    Padding="10">
                <TextBlock Text="{Binding DeprecatedWarning}"
                           HorizontalAlignment="Center"
                           TextWrapping="WrapWholeWords"
                           Foreground="White">
                    <interactivity:Interaction.Behaviors>
                        <common:TextBlockHyperlinkBehavior Foreground="White"/>
                    </interactivity:Interaction.Behaviors>
                </TextBlock>
            </Border>

            <controls:InAppNotification x:ConnectionId='7' x:Name="ExceptionNotification"
                                        Grid.Row="2"
                                        Grid.RowSpan="2"
                                        Style="{StaticResource ExceptionNotification}"
                                        Grid.ColumnSpan="2"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center"
                                        StackMode="QueueBehind"
                                        Margin="10"
                                        Canvas.ZIndex="999" />
            
            <Grid x:ConnectionId='8' x:Name="waitRing"
                    Grid.Row="1"
                    Grid.RowSpan="3"
                    Grid.ColumnSpan="2"
                    Visibility="Collapsed"
                    Canvas.ZIndex="999">
                <Grid Background="{ThemeResource BackingTint}" />
                <ProgressRing Width="100"
                                Height="100"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
                                IsActive="True" />
            </Grid>
        </Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='37' x:Name="WindowStates"
                                                                                    >
                <VisualState x:ConnectionId='47' x:Name="NarrowState">
                    <VisualState.Setters>
                        <Setter Target="NarrowInfoButton.Visibility" Value="Visible" />
                        <Setter Target="SampleTitleBar.(Grid.ColumnSpan)" Value="2" />
                        <Setter Target="InfoAreaPivot.Margin" Value="0,50,0,0" />

                        <Setter Target="InfoAreaGrid.(Grid.Column)" Value="0" />
                        <Setter Target="InfoAreaGrid.(Grid.ColumnSpan)" Value="2" />

                        <Setter Target="Splitter.Visibility" Value="Collapsed" />
                        <Setter Target="ExpandPane.Visibility" Value="Collapsed" />

                        <Setter Target="SideColumn.Width" Value="0" />
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:ConnectionId='48' x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
            <VisualStateGroup x:ConnectionId='38' x:Name="PaneStates"
                                                                                  >
                <VisualState x:ConnectionId='39' x:Name="Full">
                    <VisualState.StateTriggers>
                        <StateTrigger x:ConnectionId='46'                                                                              />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="InfoAreaGrid.Visibility" Value="Visible" />
                        <Setter Target="ExpandPane.Icon" Value="OpenPane" />
                        <Setter Target="SampleTitleBar.(Grid.ColumnSpan)" Value="1" />
                        <Setter Target="SampleTitleBar.(Grid.Column)" Value="0" />
                        <Setter Target="InfoAreaPivot.Margin" Value="0,50,0,0" />

                        <Setter Target="InfoAreaGrid.(Grid.Column)" Value="0" />
                        <Setter Target="InfoAreaGrid.(Grid.ColumnSpan)" Value="2" />
                        <Setter Target="SideColumn.Width" Value="Auto" />

                        <Setter Target="Splitter.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='40' x:Name="Show">
                    <VisualState.StateTriggers>
                        <StateTrigger x:ConnectionId='45'                                                                                />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="InfoAreaGrid.Visibility" Value="Visible" />
                        <Setter Target="NarrowInfoButton.Icon" Value="Cancel" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='41' x:Name="Hide">
                    <VisualState.StateTriggers>
                        <StateTrigger x:ConnectionId='44'                                                                                />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="InfoAreaGrid.Visibility" Value="Collapsed" />
                        <Setter Target="SideColumn.Width" Value="0" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='42' x:Name="None">
                    <VisualState.StateTriggers>
                        <StateTrigger x:ConnectionId='43'                                                                              />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="InfoAreaGrid.Visibility" Value="Collapsed" />
                        <Setter Target="SideColumn.Width" Value="0" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>

