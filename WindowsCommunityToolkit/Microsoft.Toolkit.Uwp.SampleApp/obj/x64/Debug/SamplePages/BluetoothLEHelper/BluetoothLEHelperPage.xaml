<Page x:ConnectionId='1' x:Class="Microsoft.Toolkit.Uwp.SampleApp.SamplePages.BluetoothLEHelperPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:connectivity="using:Microsoft.Toolkit.Uwp.Connectivity"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <RelativePanel>
        <Button x:ConnectionId='2' x:Name="BtEnumeration"
                Margin="10"
                                         
                Content="Start enumeration" />
        <ListView x:ConnectionId='3' x:Name="LVDevices"
                    Height="200"
                    Margin="10"
                    VerticalAlignment="Top"
                                                                               
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True"
                    RelativePanel.Below="BtEnumeration"
                                                                 >
            <ListView.ItemTemplate>
                <DataTemplate                                                      >
                    <StackPanel x:ConnectionId='18'>
                        <TextBlock x:ConnectionId='19'                                   />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel x:ConnectionId='4' Name="SPDevice"
                    Margin="10"
                    RelativePanel.Below="LVDevices">
            <TextBlock x:ConnectionId='15' x:Name="TbDeviceName"
                        Text="" />
            <TextBlock x:ConnectionId='16' x:Name="TbDeviceBtAddr"
                        Text="" />
        </StackPanel>

        <ComboBox x:ConnectionId='5' x:Name="CBServices"
                    Margin="10"
                    RelativePanel.Below="SPDevice"
                                                                  
                    Visibility="Collapsed">
            <ComboBox.ItemTemplate>
                <DataTemplate                                                      >
                    <TextBlock x:ConnectionId='13'>
                        <Run Text="Service Name: " />
                        <Run x:ConnectionId='14'                      />
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <ComboBox x:ConnectionId='6' x:Name="CBCharacteristic"
                    Margin="10"
                    RelativePanel.Below="CBServices"
                                                                        
                    Visibility="Collapsed">
            <ComboBox.ItemTemplate>
                <DataTemplate                                                        >
                    <TextBlock x:ConnectionId='10'>
                        <Run Text="Characteristic Name: " />
                        <Run x:ConnectionId='11'                      />
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button x:ConnectionId='7' x:Name="BtReadCharValue"
                Margin="10"
                                           
                Content="Read Value"
                RelativePanel.Below="CBCharacteristic"
                Visibility="Collapsed" />

        <TextBlock x:ConnectionId='8' x:Name="TBCharValue"
                    Margin="10"
                    RelativePanel.Below="BtReadCharValue" />
    </RelativePanel>
</Page>

