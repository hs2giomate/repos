<Page x:Class="Microsoft.Toolkit.Uwp.SampleApp.SamplePages.TwitterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:twitter="using:Microsoft.Toolkit.Services.Twitter"
      xmlns:local="using:Microsoft.Toolkit.Uwp.SampleApp.SamplePages.Twitter_Service"
      mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="TwitterSchemaTemplate"
                                                >
            <Border x:ConnectionId='12' Margin="12,0,12,12"
                    Padding="12"
                    Background="{ThemeResource Brush-Sample-Background}"
                    BorderBrush="{ThemeResource InfoArea-Titlebar}"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.RowSpan="2"
                               Width="50"
                               Height="50"
                               Margin="0,0,12,0"
                               VerticalAlignment="Top"
                               Source="{Binding User.ProfileImageUrl}"
                               Stretch="Uniform" />
                        <TextBlock x:ConnectionId='17' Grid.Column="1"
                                   FontWeight="SemiBold"
                                                             />
                        <TextBlock x:ConnectionId='18' Grid.Row="1"
                                   Grid.Column="1"
                                   VerticalAlignment="Top"
                                   FontWeight="Light"
                                                                   />
                        <Image Grid.RowSpan="2"
                               Grid.Column="2"
                               Width="24"
                               Height="24"
                               VerticalAlignment="Top"
                               Source="/SamplePages/Twitter Service/TwitterLogo.png"
                               Stretch="Uniform" />
                    </Grid>
                    <TextBlock x:ConnectionId='13' Grid.Row="1"
                               FontWeight="SemiBold"
                                                   
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="WrapWholeWords" />

                    <StackPanel Grid.Row="2"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                        <TextBlock x:ConnectionId='15' FontWeight="ExtraLight"
                                                                />
                        <TextBlock x:ConnectionId='16' Margin="4,0,0,0"
                                   FontWeight="ExtraLight"
                                                               />
                    </StackPanel>

                    <Image x:ConnectionId='14' Grid.Row="3"
                                                                        />
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="TwitterEventTemplate"
                                                             >
            <Border x:ConnectionId='3' Margin="12,0,12,12"
                    Padding="12"
                    Background="{ThemeResource InfoArea-Titlebar}"
                    BorderBrush="#E2FFF893"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.RowSpan="2"
                               Width="25"
                               Height="25"
                               Margin="0,0,12,0"
                               VerticalAlignment="Top"
                               Source="{Binding Source.ProfileImageUrl}"
                               Stretch="Uniform" />
                        <TextBlock x:ConnectionId='8' Grid.Column="1"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                                               />
                        <TextBlock x:ConnectionId='9' Grid.Row="1"
                                   Grid.Column="1"
                                   VerticalAlignment="Top"
                                   FontSize="12"
                                   FontWeight="Light"
                                                                     />
                        <TextBlock x:ConnectionId='10' Grid.RowSpan="2"
                                   Grid.Column="2"
                                   Margin="4,0,0,0"
                                   FontWeight="ExtraBold"
                                                             />
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.RowSpan="2"
                               Width="50"
                               Height="50"
                               Margin="0,0,12,0"
                               VerticalAlignment="Top"
                               Source="{Binding Target.ProfileImageUrl}"
                               Stretch="Uniform" />
                        <TextBlock x:ConnectionId='6' Grid.Column="1"
                                   FontWeight="SemiBold"
                                                               />
                        <TextBlock x:ConnectionId='7' Grid.Row="1"
                                   Grid.Column="1"
                                   VerticalAlignment="Top"
                                   FontWeight="Light"
                                                                     />
                        <Image Grid.RowSpan="2"
                               Grid.Column="2"
                               Width="24"
                               Height="24"
                               VerticalAlignment="Top"
                               Source="/SamplePages/Twitter Service/TwitterLogo.png"
                               Stretch="Uniform" />
                    </Grid>
                    <TextBlock x:ConnectionId='4' Grid.Row="2"
                               FontWeight="SemiBold"
                                                                
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="WrapWholeWords" />

                    <StackPanel Grid.Row="3"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                        <TextBlock x:ConnectionId='5' FontWeight="ExtraLight"
                                                                />
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!--Template Selector-->
        <local:TwitterTemplateSelector x:Key="TwitterTemplateSelector"
                                       TweetTemplate="{StaticResource TwitterSchemaTemplate}"
                                       EventTemplate="{StaticResource TwitterEventTemplate}" />
    </Page.Resources>

    <Grid MaxWidth="800"
          Background="{ThemeResource Brush-Grey-05}">
        <Grid Margin="24"
              Background="{ThemeResource Brush-Grey-04}"
              BorderBrush="{ThemeResource InfoArea-Titlebar}"
              BorderThickness="1"
              CornerRadius="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <Image Width="100"
                       Height="100"
                       Margin="24"
                       Source="/SamplePages/Twitter Service/TwitterLogo.png"
                       Stretch="Uniform" />
                <Border x:ConnectionId='47' x:Name="ProfileImage"
                        Width="100"
                        Height="100"
                        CornerRadius="50"
                        Visibility="Collapsed">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding ProfileImageUrl}"
                                    Stretch="Uniform" />
                    </Border.Background>
                </Border>
            </StackPanel>

            <ScrollViewer Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <!--  Credentials area  -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Background="{ThemeResource InfoArea-Titlebar}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button x:ConnectionId='46' x:Name="CredentialsBoxExpandButton"
                                    VerticalAlignment="Stretch"
                                                                              
                                    Content=""
                                    FontFamily="Segoe MDL2 Assets" />
                            <TextBlock Grid.Column="1"
                                       Margin="12,6"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource Brush-Grey-01}"
                                       Text="Credentials" />
                        </Grid>

                        <StackPanel x:ConnectionId='41' x:Name="CredentialsBox"
                                    Grid.Row="1"
                                    Margin="24"
                                    Orientation="Vertical">
                            <HyperlinkButton Margin="0,0,0,15"
                                             Content="Show me how to get these values"
                                             NavigateUri="https://docs.microsoft.com/windows/uwpcommunitytoolkit/services/Twitter/" />
                            <TextBox x:ConnectionId='42' x:Name="ConsumerKey"
                                     Margin="0,0,0,12"
                                     Header="Consumer Key:" />
                            <TextBox x:ConnectionId='43' x:Name="ConsumerSecret"
                                     Margin="0,0,0,12"
                                     Header="Consumer Secret:" />
                            <TextBox x:ConnectionId='44' x:Name="CallbackUri"
                                     Margin="0,0,0,12"
                                     Header="Callback URI:" />
                            <Button x:ConnectionId='45' x:Name="ConnectButton"
                                    Margin="0,10,0,0"
                                    VerticalAlignment="Bottom"
                                                                 
                                    Content="Connect" />
                        </StackPanel>
                    </Grid>

                    <!--  Tweet area  -->
                    <Grid x:ConnectionId='19' x:Name="ShareBox"
                          Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Background="{ThemeResource InfoArea-Titlebar}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button x:ConnectionId='40' x:Name="TweetBoxExpandButton"
                                    VerticalAlignment="Stretch"
                                                                        
                                    Content=""
                                    FontFamily="Segoe MDL2 Assets" />
                            <TextBlock Grid.Column="1"
                                       Margin="12,6"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource Brush-Grey-01}"
                                       Text="Tweet" />
                        </Grid>

                        <StackPanel x:ConnectionId='32' x:Name="TweetPanel"
                                    Grid.Row="1"
                                    Margin="24">
                            <TextBox x:ConnectionId='33' x:Name="TweetText"
                                     Margin="0,0,0,12"
                                     Header="Tweet" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <AppBarButton x:ConnectionId='36' x:Name="GetLocation"
                                                                         
                                              Icon="World"
                                              Label="Locate" />
                                <TextBox x:ConnectionId='37' x:Name="Latitude"
                                         Grid.Column="1"
                                         Margin="0,0,6,12"
                                         Header="Latitude" />
                                <TextBox x:ConnectionId='38' x:Name="Longitude"
                                         Grid.Column="2"
                                         Margin="6,0,6,12"
                                         Header="Longitude" />
                                <CheckBox x:ConnectionId='39' x:Name="DisplayCoordinates"
                                          Grid.Column="3"
                                          Margin="6,0,6,12"
                                          VerticalAlignment="Bottom"
                                          Content="Display Coords" />
                            </Grid>

                            <StackPanel Orientation="Horizontal">
                                <Button x:ConnectionId='34' x:Name="ShareButton"
                                        Margin="0,0,12,0"
                                                                   
                                        Content="Share" />
                                <Button x:ConnectionId='35' x:Name="SharePictureButton"
                                                                          
                                        Content="Share with picture" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!--  Search area  -->
                    <Grid x:ConnectionId='20' x:Name="SearchBox"
                          Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Background="{ThemeResource InfoArea-Titlebar}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button x:ConnectionId='31' x:Name="SearchBoxExpandButton"
                                    VerticalAlignment="Stretch"
                                                                         
                                    Content=""
                                    FontFamily="Segoe MDL2 Assets" />
                            <TextBlock Grid.Column="1"
                                       Margin="12,6"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource Brush-Grey-01}"
                                       Text="Search" />
                        </Grid>

                        <StackPanel x:ConnectionId='28' x:Name="SearchPanel"
                                    Grid.Row="1"
                                    Margin="24">
                            <TextBox x:ConnectionId='29' x:Name="TagText"
                                     Margin="0,0,0,12"
                                     Header="Search tag:" />
                            <Button x:ConnectionId='30' x:Name="SearchButton"
                                    Margin="0,10,0,0"
                                                                
                                    Content="Search" />
                        </StackPanel>
                    </Grid>

                    <!--  Live feed area  -->
                    <Grid x:ConnectionId='21' x:Name="LiveFeedBox"
                          Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Background="{ThemeResource InfoArea-Titlebar}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button x:ConnectionId='27' x:Name="LiveFeedBoxExpandButton"
                                    VerticalAlignment="Stretch"
                                                                           
                                    Content=""
                                    FontFamily="Segoe MDL2 Assets" />
                            <TextBlock Grid.Column="1"
                                       Margin="12,6"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource Brush-Grey-01}"
                                       Text="Live feed" />
                        </Grid>

                        <StackPanel x:ConnectionId='25' x:Name="LiveFeedPanel"
                                    Grid.Row="1"
                                    Margin="24,24,24,10">
                            <ToggleSwitch x:ConnectionId='26' x:Name="LiveFeedToggle"
                                          Header="Get live tweets"
                                                                            />
                        </StackPanel>
                    </Grid>

                    <!--  Results area  -->
                    <ListView x:ConnectionId='22' x:Name="ListView"
                              Grid.Row="4"
                              Margin="0,12,0,0"
                              IsItemClickEnabled="False"
                              ItemTemplateSelector="{StaticResource TwitterTemplateSelector}"
                              SelectionMode="None">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <ListViewItemPresenter PointerOverBackground="{x:Null}" />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>

