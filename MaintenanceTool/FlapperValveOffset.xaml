                            <ToggleSwitch Style="{StaticResource ToggleSwitchStyle1}" x:Name="FVToggleSwitchBit8" OnContent="1" OffContent="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" UseLayoutRounding="False" ScrollViewer.VerticalScrollBarVisibility="Disabled" RenderTransformOrigin="0.5,0.5" Toggled="FVToggleBit8_Toggled" ScrollViewer.HorizontalScrollBarVisibility="Disabled" FontSize="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
