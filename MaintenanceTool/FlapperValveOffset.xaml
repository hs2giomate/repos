                            <StackPanel HorizontalAlignment="Stretch" Margin="0,45,0,45" Orientation="Vertical" Height="{Binding ActualWidth, ElementName=FVToggleSwitchBit8, Mode=OneWay}">
                                <ToggleSwitch Style="{StaticResource ToggleSwitchStyle1}" x:Name="FVToggleSwitchBit5" OnContent="1" OffContent="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" UseLayoutRounding="False" ScrollViewer.VerticalScrollBarVisibility="Disabled" RenderTransformOrigin="0.5,0.5" Toggled="FVToggleBit5_Toggled" ScrollViewer.HorizontalScrollBarVisibility="Disabled" FontSize="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <ToggleSwitch.RenderTransform>
                                        <CompositeTransform Rotation="-90.000000000000014" TranslateY="{Binding ActualWidth, ElementName=FVToggleBitValue, Mode=OneWay}"/>
                                    </ToggleSwitch.RenderTransform>
                                </ToggleSwitch>
