                        </StackPanel>
                        <StackPanel x:Name="ToggleBitGroup_Copy4">
                            <TextBlock x:Name="FVToggleBitValue4" Text="0" TextWrapping="Wrap" FontSize="14" TextAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
