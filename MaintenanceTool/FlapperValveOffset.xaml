                <TextBlock x:Name="Tittel" Text="Flapper Valve Offset" TextWrapping="Wrap" Width="441" Style="{StaticResource SampleHeaderTextStyle}" SelectionChanged="TextBlock_SelectionChanged" TextAlignment="Center"/>
            </StackPanel>

            <ScrollViewer x:Name="ScrollerToggleBits" Grid.Row="1" VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto" Margin="0,0,0,100" ViewChanged="EventsScrollViewer_ViewChanged">
